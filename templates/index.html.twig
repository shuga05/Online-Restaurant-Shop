    <section class="orders space-style" id="orders">
        <div class="container style-con">
            <h1>Menu</h1>
            <div class="row">
                {% for product in productLists %}
                    <div class="col-sm-4">
                        <h4>{{product.name}}</h4>
                        <img class="img-container" src="/images/{{product.img}}" />
                        <p>${{product.unitPrice}}</p>
                        <p class="text-left">{{product.description}}</p>
                        <form method="POST" action="index.html.twig" enctype="multipart/form-data">
                            Quantity: <input type="number" name="quantity" value="{{o.quantity}}"><br>
                            Peferred Delivery: <input type="date" name="requiredDeliveryDate" id="start-" value="{{o.requiredDeliveryDate}}"><br>
                         <input name="btnAdd" type="button" class="btn btn-dark btn-block" value="Add">  
                        </form>
                    </div>
                {% endfor %}
            </div>
        </div>    
    </section>


    <section class="space-style">
        <div class="container">
            <h1>Total</h1>
            <span id="display"></span>
            <div class="row">
                <div class="col font-weight-bold">
                    Items
                </div>
                <div class="col col-lg-2">
                    Price
                </div>
                <div class="col col-lg-2">
                    3 of 3
                </div> 
            </div>
            
            <!-- Did not have time to do this part of the project -->

            {% for order in orderLists %}
                <div class="row" id="itemrow{{order.productId}}">
                    <div class="col">
                        <span id="display"></span>
                        <p>{{order.name}}</p>
                    </div>
                    <div class="col col-lg-2">
                        <p>{{order.unitPrice}}</p>
                    </div>
                    <div class="col col-lg-2">
                        <p class="cartQuantity" cartID="{{order.productId}}" name="quantity{{order.productId}}" value="{{order.quantity}}"></p>
                    </div> 
                </div>
            {% endfor %}
            
           <div class="row">
                <div class="col font-weight-bold">
                   
                </div>
                <div class="col col-lg-2">
                    <p> Total:</p> 
                </div>
                <div class="col col-lg-2">
                    
                </div> 
            </div>
    

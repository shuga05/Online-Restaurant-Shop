        <ul class="error">
            {% for error in errorList %}
                <li>{{error}}</li>
                {% endfor %}
        </ul>
    {% endif %}

    <section>   
        <div class="row backgroundimg">
            <div class="container">
                <h4 class="style-head text-center">Indulge in Bliss</h4>
            </div>
        </div>
    </section>

    <section class="about space-style" id="about">

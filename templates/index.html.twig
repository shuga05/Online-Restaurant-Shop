{% extends "master.html.twig" %}

{% block head %}
    <script>
        $(document).ready(function(){
            
            $("input[name=btnAdd]").click(function(){
                var name = $("input[name=quantity]").val("");
                var deliveryDate = $("input[name=requiredDeliveryDate]").val("");
                
                $("#display").text(name, deliveryDate);
                
            });
            
        });
    </script>
{% endblock %}

{% block title %}
    {% if action == 'edit' %}
        Vita Delices
    {% endif %}
{% endblock %}

{% block content %}


    <!--errorList is formed for 'post' action in the index file-->

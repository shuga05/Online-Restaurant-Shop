                    {% else %}
                        <li class="navbar-nav"><a class="nav-link" href="/login">Login</a></li>
                        <li class="navbar-nav"><a class="nav-link" href="/register">Register</a></li>     
                    {% endif %}
                
                </ul>
                  </div>
                </div>
            </nav>
        </header>
